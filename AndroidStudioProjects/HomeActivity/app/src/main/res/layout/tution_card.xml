<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        
        android:id="@+id/subject_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subject_value"
        app:layout_constraintBottom_toTopOf="@+id/teacher_label"
        android:text="Subject"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subject_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subject_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teacher_value"
        android:text="qwerty"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/teacher_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/subject_label"
        app:layout_constraintBottom_toTopOf="@+id/rating_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/teacher_value"
        android:text="Teacher"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/teacher_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/subject_value"
        app:layout_constraintStart_toEndOf="@+id/teacher_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rating_value"
        android:text="qwerty"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/rating_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_label"
        app:layout_constraintBottom_toTopOf="@+id/price_label"
        android:text="Rating" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rating_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/teacher_value"
        app:layout_constraintStart_toEndOf="@+id/rating_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/price_value"
        android:text="rate"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rating_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rating_value"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Price"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rating_value"
        app:layout_constraintStart_toEndOf="@+id/price_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="price"/>

    

</androidx.constraintlayout.widget.ConstraintLayout>